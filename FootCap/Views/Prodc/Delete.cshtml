@model FootCap.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5">
    <h2 class="text-danger text-center mb-4">⚠️ Confirm Delete</h2>

    <div class="alert alert-warning text-center">
        Are you sure you want to delete the product: <strong>@Model.Name</strong>?
    </div>

    <div class="text-center">
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.ProductId" />
            <button type="submit" class="btn btn-danger px-4 me-2">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
        </form>
    </div>
</div>
