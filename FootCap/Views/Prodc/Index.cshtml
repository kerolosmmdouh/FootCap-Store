@model IEnumerable<FootCap.Models.Product>

@{
    ViewData["Title"] = "Product List";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container py-5">
    <h2 class="text-center mb-4 text-primary fw-bold">🛒 All Products</h2>

    <div class="mb-4 text-center">
        <a asp-action="Add" class="btn btn-success px-4 me-2">
            <i class="bi bi-plus-circle"></i> Add Product
        </a>
        <a asp-controller="Admin" asp-action="AdminDashboard" class="btn btn-secondary px-4">
            ← Back to Dashboard
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@product.ImageUrl" class="card-img-top" style="height: 250px; object-fit: cover;" alt="@product.Name" />
                    <div class="card-body bg-light d-flex flex-column">
                        <h5 class="card-title fw-bold">@product.Name</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <p class="card-text"><strong>Price:</strong> @product.Price.ToString("0.00") EGP</p>
                        <p class="card-text"><strong>Quantity:</strong> @product.QuantityInStock</p>
                        <p class="card-text"><strong>Category:</strong> @product.Category?.Name</p>

                        <div class="mt-auto">
                            <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-primary me-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
